.contain-to-grid.top-zone.small
  .row.content-title-row
    .columns.small-12
      %h2.big-title= @profile.edit_content_title
      %h3.small-title Let people know about your lifestyle so that they can decide to join you in your trips

.contain-to-grid.main-zone
  .row.profile

    .columns.small-3
      = image_tag @profile.picture_url
    .columns.small-7.halfleft

      = simple_form_for @profile.user, url: me_edit_path, method: :put, html: {'data-abide' => true } do |f|

        .row
          .columns.small-6
            = f.input :first_name
          .columns.small-6
            = f.input :last_name
        .row
          .columns.small-6
            = f.input :email, required: true
        .row
          .columns.small-6
            = f.input :birth_date, as: :date, start_year: Date.today.year - 90, end_year: Date.today.year, prompt: { day: 'dd', month: 'mm', year: 'yyyy' }
          .columns.small-3
            = f.input :sex, collection: User::SEX_COLLECTION
          .columns.small-3
            = f.input :relationship_status, collection: User::RELATIONSHIP_STATUS_COLLECTION
        .row
          .columns.small-6
            = f.input :nationality, collection: nationality_select_collection, required: true
          .columns.small-6
            = f.input :city, required: true, options: {data: {city_autocomplete: true, city_autocomplete_lat: 'user_latitude', city_autocomplete_lng: "user_longitude"}}
            = f.input :latitude, required: true, as: :hidden
            = f.input :longitude, required: true, as: :hidden
        .row
          .columns.small-5
            = f.label :mood
            .row
              .columns.small-4
                <input id="user_mood_hippy" name="user[mood]" type="radio" value="H" class="hidden-field">
                %span.custom.checkbox.picto.hippy
                %label.collection_check_boxes
                  Hippy
              .columns.small-4
                <input id="user_mood_normal" name="user[mood]" type="radio" value="N" class="hidden-field">
                %span.custom.checkbox.picto.normal
                %label.collection_check_boxes
                  Normal
              .columns.small-4
                <input id="user_mood_chic" name="user[mood]" type="radio" value="C" class="hidden-field">
                %span.custom.checkbox.picto.chic
                %label.collection_check_boxes
                  Chic

        .row
          .columns.small-5
            = f.label :time
            .row
              .columns.small-4
                <input id="user_time_day" name="user[mood]" type="radio" value="D" class="hidden-field">
                %span.custom.checkbox.picto.day
                %label.collection_check_boxes
                  Day
              .columns.small-4
                <input id="user_time_night" name="user[mood]" type="radio" value="N" class="hidden-field">
                %span.custom.checkbox.picto.night
                %label.collection_check_boxes
                  Night
              .columns.small-4
                <input id="user_time_allday" name="user[mood]" type="radio" value="A" class="hidden-field">
                %span.custom.checkbox.picto.allday
                %label.collection_check_boxes
                  All day
        .row
          .columns.small-offset-9.small-2.halfleft
            = f.button :submit


