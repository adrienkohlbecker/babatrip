  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %title= content_for?(:title) ? yield(:title) : "Travel Meet"
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag :modernizr
    = csrf_meta_tags
    %meta{:content => "", :name => "description"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Ubuntu:300,400,700|Dancing+Script:400,700'
    / Place favicon.ico and apple-touch-icon.png in the root directory
  %body
    /[if lt IE 7]
      <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>

    = render :partial => 'shared/topbar'

    .row

      - flash.each do |key, msg|
        %div{class: "alert-box #{key}", data: {alert: true}}
          = msg.html_safe
          %a.close{href: '#'} &times;

      / .notice= notice
      / .alert= alert

    = yield

    #contact-modal.reveal-modal

    = jquery_include_tag :google
    = javascript_include_tag "application", "data-turbolinks-track" => true

