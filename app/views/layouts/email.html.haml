      / CONTENT PREVIEW
      %tr
        %td.content-preview{colspan:3}= @content_preview
      / HEADER
      %tr{bgcolor: "#0e9880"}
        %td
        %td.header.container
          .content
            %table
              %tr
                %td
                  %img{src: "http://#{ENV['DOMAIN']}/logo_email.jpg"}/
                %td{align: "right"}
                  %h6.collapse Aenean lacinia bibendum nulla sed consectetur. Nulla vitae
        %td
      %tr
        %td
        %td.container{bgcolor: "#FFFFFF"}
          .content
            %table
              %tr
                %td
                  = yield
          / /content
        %td
    / /BODY
