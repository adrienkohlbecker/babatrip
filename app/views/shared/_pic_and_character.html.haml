.profile-pic
  %img{src: user.picture_url}
.character
  .mood
    %span{:class => [class_from_mood(user.mood), :picto], title: user.mood, data: {tooltip: true}}
      = user.mood
  .time
    %span{:class => [class_from_time(user.time), :picto], title: user.time, data: {tooltip: true}}
      = user.time
  .relationship
    %span{:class => [class_from_relationship(user.relationship_status), :picto], title: user.relationship_status, data: {tooltip: true}}
      = user.relationship_status
