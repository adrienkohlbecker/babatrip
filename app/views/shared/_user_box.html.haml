
.left-user-box
  .profile-pic
    %img{src: user.picture_url}
.middle-user-box
  .name
    = user.full_name
  .age-city
    = "#{user.age} years old, #{user.nationality}"
  .fa.fa-map-marker.location
    = user.city
.right-user-box
  %div{:class => [:mood, class_from_relationship_and_sex(user, current_user)]}
    %span{:class => [class_from_mood(user.mood), :picto, :small], title: user.mood, data: {tooltip: true}}
      = user.mood
  %div{:class => [:time, class_from_relationship_and_sex(user, current_user)]}
    %span{:class => [class_from_time(user.time), :picto, :small], title: user.time, data: {tooltip: true}}
      = user.time

